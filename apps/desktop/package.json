{
  "name": "vpn-desktop",
  "version": "1.0.0",
  "description": "Electron desktop shell for VPN Manager",
  "author": "Alexandre Posta",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite --host 0.0.0.0 --port 5174",
    "dev:electron": "wait-on http://localhost:5174 && cross-env NODE_ENV=development DESKTOP_UI_URL=http://localhost:5174 electron .",
    "start": "cross-env NODE_ENV=production electron .",
    "build:renderer": "tsc --project tsconfig.json && vite build",
    "build": "npm run build:renderer && node scripts/run-electron-builder.js",
    "build:win": "npm run build:renderer && node scripts/run-electron-builder.js --win --x64",
    "preview": "vite preview --port 4174",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true}); require('fs').rmSync('release',{recursive:true,force:true});\""
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@tanstack/react-query": "^5.35.5",
    "axios": "^1.6.8",
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3",
    "vite": "^5.2.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.vpn.manager",
    "productName": "VPN Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/icon.png"
    },
    "portable": {
      "requestExecutionLevel": "admin"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    }
  }
}
